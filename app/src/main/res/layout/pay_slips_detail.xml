<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/common_data_bg"
                                    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.winit.iKonnect.ui.customview.CustomImageView
                android:id="@+id/ivUserPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/place_holder_image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUser_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_size_small_16"/>

                <TextView
                    android:id="@+id/tvUserDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdul Reheem"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_very_small_14"/>

                <TextView
                    android:id="@+id/tvUser_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[12345]"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_size_very_small_14"/>
            </LinearLayout>

        </LinearLayout>
        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/margin_10"
             android:background="@drawable/line_full"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/Mobile"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"/>

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="aaaa"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/Email"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"/>

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvEmailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/Grade"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"/>

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/Religion"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"/>

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvReligion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/nationality"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"/>

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_Nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_10"
            android:text="Reason For Request"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_very_small_14"/>

        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/common_data_input_field"
            android:gravity="left"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/startTTypingHere"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/margin_3"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_very_small_12"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
