<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/common_data_bg"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/PaymentDetails"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_small_16" />

            <EditText
                android:id="@+id/etpaymentDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@null"
                android:drawableBottom="@drawable/line_full"
                android:hint="@string/PaymentDetails"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/FCurrent"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_small_16" />

            <EditText
                android:id="@+id/etFcurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@null"
                android:drawableBottom="@drawable/line_full"
                android:hint="@string/FCurrent"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/SAREquip"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_small_16" />

            <EditText
                android:id="@+id/etSarEquip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@null"
                android:drawableBottom="@drawable/line_full"
                android:hint="@string/SAREquip"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/Remarks"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_small_16" />

            <EditText
                android:id="@+id/etRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@null"
                android:drawableBottom="@drawable/line_full"
                android:hint="@string/Remarks"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14"
                android:layout_marginBottom="@dimen/margin_10"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>