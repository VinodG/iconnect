<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_MenuHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_30"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/margin_57"
            android:layout_height="@dimen/margin_57"
            android:paddingBottom="@dimen/margin_2"
            android:paddingTop="@dimen/margin_2"
            android:src="@drawable/profile_pic"
            android:background="@drawable/pic_round_corner"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_10">

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdul Raheem"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_12"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales manager"
                android:textColor="@color/quaote_color"
                android:textSize="@dimen/text_size_very_small_12"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tvuseerid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[235689]"
                android:textColor="@color/quaote_color"
                android:textSize="@dimen/text_size_very_small_12"
                android:textStyle="normal"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/img_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_weight="1"
                android:text="@string/Th"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_17"
                android:src="@drawable/share_another"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_thoughtoftheday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/quaote_color"
            android:textSize="@dimen/text_size_very_small_12"/>
    </LinearLayout>


</LinearLayout>