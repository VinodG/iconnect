<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@drawable/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/purpose_of_passport_release"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_very_small_14" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4"
            android:drawableRight="@drawable/down_arow"
            android:hint="@string/purpose_of_passport_release"
            android:paddingRight="@dimen/margin_5"
            android:paddingTop="@dimen/margin_10"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_very_small_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_full" />

        <EditText
            android:id="@+id/etOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_data_input_field"
            android:gravity="left"
            android:hint="@string/startTTypingHere"
            android:inputType="textCapSentences|textMultiLine"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/margin_3"
            android:scrollbars="vertical"
            android:textColor="@color/text_light"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size_very_small_12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5"
                android:text="Date Borrowed"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_45"
                android:layout_weight="1"
                android:padding="@dimen/margin_5"
                android:text="Date to be returned"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_borrow_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/line_full"
                android:drawablePadding="@dimen/margin_4"
                android:drawableRight="@drawable/calander"
                android:hint="Date Borrowed"
                android:maxLines="1"
                android:padding="@dimen/margin_5"
                android:text=""
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:text="@string/To"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_end_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/line_full"
                android:drawablePadding="@dimen/margin_4"
                android:drawableRight="@drawable/calander"
                android:hint="Date to be returned"
                android:maxLines="1"
                android:padding="@dimen/margin_5"
                android:text=""
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>