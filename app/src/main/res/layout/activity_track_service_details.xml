<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.winit.iKonnect.ui.activities.TrackServiceDetails">

   <!-- android:background="@drawable/track_bg_new"-->
    <LinearLayout
        android:id="@+id/llFormHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivFormIcon_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:paddingRight="@dimen/margin_10"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFormName_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:text="@string/Salary_Transfer_Request"
                android:layout_marginRight="@dimen/margin_3"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_small_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested on: "
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_small_16" />

                <TextView
                    android:id="@+id/tvReq_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="26-Sep-2017"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_small_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
