<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/margin_5"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/box1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="@dimen/margin_41"
                android:layout_marginRight="@dimen/margin_41"
                android:layout_weight="1"
                android:src="@drawable/arrow_b"/>

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/text_size_extra_large_35"
                android:gravity="center"
                android:text="JUNE"
                android:textSize="@dimen/text_size_medium_18"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_front"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/margin_41"
                android:layout_marginStart="@dimen/margin_41"
                android:layout_weight="1"
                android:src="@drawable/arrow_farword"/>
        </LinearLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="9"
            android:background="@drawable/box1"
            android:gravity="center"
            android:numColumns="7"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3.3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_weight="1"
        android:background="@drawable/box1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingStart="@dimen/margin_10">

                    <TextView
                        android:id="@+id/tvsubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvstartdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvenddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvavailabilty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvorganiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/text_size_small_16"
                        android:textStyle="bold"
                        android:visibility="visible"/>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>