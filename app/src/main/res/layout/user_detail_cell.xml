<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_data_bg"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/pic_round_corner"
                android:padding="1dp"
                android:src="@drawable/place_holder_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUser_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfdfdfdsf"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_size_small_16"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvUserDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfdsfsdfsdfsdf"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_very_small_14" />

                <TextView
                    android:id="@+id/tvUser_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfsdfsfsf"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_size_very_small_14" />
            </LinearLayout>
        </LinearLayout>
        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/margin_10"
             android:background="@drawable/line_full"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:text="Mobile Number"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="right"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:text="Email Address"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvEmailId"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="end"
                android:maxLines="1"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Functional Area-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/functional_area"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"
                android:visibility="visible" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_functional_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11"
                android:visibility="visible" />


            <!-- Grade-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/position"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Date of joining-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/date_of_joining"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_date_of_joining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="end"
                android:text=""
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- Nationality-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_3"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/nationality"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11"
                android:visibility="gone" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_Nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_very_small_11"
                android:visibility="gone" />

            <!-- Brand-->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/band"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/app_color"
                android:gravity="end"
                android:text=""
                android:maxLines="1"
                android:textSize="@dimen/text_size_very_small_11" />

            <!-- Balance Leave-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:text="Leave Balance"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_11" />

            <include
                layout="@layout/colon_layout"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_leave_balance"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:gravity="end"
                android:text=""
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_very_small_11" />

        </LinearLayout>





        <LinearLayout
            android:id="@+id/ll_reson_for_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reason_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:text="Reason For Request"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_14" />

            <EditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/common_data_input_field"
                android:gravity="left"
                android:hint="@string/startTTypingHere"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_3"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_very_small_12" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
